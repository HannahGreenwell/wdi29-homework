<h2>Edit Your Account</h2>

<%= form_for @current_user do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </fieldset>
  <fieldset>
    <%= f.label :country_id, 'Country' %>
    <%= f.collection_select :country_id, Country.all, :id, :name, prompt: 'Please choose a country' %>
  </fieldset>
  <fieldset>
    <%= f.label :image, 'Image URL' %>
    <%= f.text_field :image %>
  </fieldset>
  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </fieldset>
  <fieldset>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </fieldset>

  <%= f.submit %>
<% end %>
