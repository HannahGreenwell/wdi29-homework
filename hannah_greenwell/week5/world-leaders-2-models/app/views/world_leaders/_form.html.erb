<%= form_for @world_leader do |f| -%>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>

  <fieldset>
    <%= f.label :years_in_office, 'In Office' %>
    <%= f.text_field :years_in_office %>
  </fieldset>

  <fieldset>
    <%= f.label :alive %>
    <%= f.text_field :alive %>
  </fieldset>

  <fieldset>
    <%= f.label :image, 'Image URL' %>
    <%= f.text_field :image %>
  </fieldset>

  <fieldset>
    <%= f.label :quote %>
    <%= f.text_field :quote %>
  </fieldset>

  <fieldset>
    <%= f.label :country_id, 'Country' %>
    <%= f.collection_select :country_id, Country.all, :id, :name, prompt: 'Please choose a country' %>
  </fieldset>

  <%= f.submit %>
<% end %>
