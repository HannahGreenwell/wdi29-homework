<h2>Login</h2>

<% if flash[:errors].present? %>
  <strong><%= flash[:errors] %></strong>
  <br>
  <br>
<% end %>

<%= form_tag login_path do %>
  <%= label_tag :email %>
  <%= email_field_tag :email, nil %>
  <br>
  <%= label_tag :password %>
  <%= password_field_tag :password, nil %>
  <br>
  <br>
  <%= submit_tag 'Login' %>
<% end %>
